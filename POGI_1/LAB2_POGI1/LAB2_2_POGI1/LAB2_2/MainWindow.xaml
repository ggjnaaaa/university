<Window x:Class="LAB2_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LAB2_2"
        mc:Ignorable="d"
        Title="Lab2_2" Height="300" Width="500">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200*"/>
            <ColumnDefinition Width="300*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="177*"/>
            <RowDefinition Height="107*"/>
        </Grid.RowDefinitions>
        <Button x:Name="add" Content="добавить в список" Grid.Column="0" Grid.Row="1" Margin="20,20,20,45" FontSize="16" Click="Button_click"/>
        <TextBox x:Name="enter" Grid.Row="0" Grid.Column="0" Text="" Background="LightGray" Margin="10,30,10,0" TextWrapping="Wrap"/>
        <TextBlock x:Name="txt" Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" Text="" Background="LightGray" Margin="15,20,15,20"/>
    </Grid>
</Window>
